<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_seven_targets_lead_connection_status_form" model="ir.ui.view">
    <field name="name">seven.targets.lead.connection.status.form</field>
    <field name="model">seven.targets.lead.connection.status</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
    <form>
        <sheet>
            <group>
                <field name="odoo_stage" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                <field name="name"/>
            </group>
        </sheet>
    </form>
    </field>
    </record>
    
    <record id="view_seven_targets_lead_connection_status_tree" model="ir.ui.view">
    <field name="name">seven.targets.lead.connection.status.tree</field>
    <field name="model">seven.targets.lead.connection.status</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="odoo_stage"/>
        </tree>
    </field>
    </record>

</odoo>